{
    "debug": true,
    "name": "balcony_controller",
    "availabilityTopic": "home/devices/balcony_controller/availability",
    "debugTopic": "home/devices/balcony_controller/debug",
    "interfaces": [
        {
            "type": "output",
            "name": "relay",
            "commandTopic": "home/switches/balcony_sprinkler/set",
            "default": false,
            "invert": true,
            "pin": 3
        },
        {
            "type": "hm3301",
            "name": "hm3301",
            "sda": 0,
            "scl": 2
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "relay",
            "topic": "home/switches/balcony_sprinkler/state",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "hm3301",
            "topic": "home/sensors/air_quality/outside",
            "retain": true,
            "template": "{\"pm1\":%1,\"pm2_5\":%2,\"pm10\":%3}"
        }
    ]
}
