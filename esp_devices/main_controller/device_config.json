{
    "debug": true,
    "name": "main_controller",
    "availabilityTopic": "home/devices/main_controller/availability",
    "interfaces": [
        {
            "type": "input",
            "name": "rain",
            "pin": 0,
            "cycle": "multi"
        },
        {
            "type": "counter",
            "name": "wind_strength",
            "pin": 3,
            "interval": 10,
            "multiplier": 2.4,
            "bounceTime": 5
        },
        {
            "type": "output",
            "name": "light_attic_upstairs",
            "commandTopic": "home/switches/lights/attic/upstairs/set",
            "invert": true,
            "default": 0,
            "pin": 2
        },
        {
            "type": "input",
            "name": "light_switch_attic_upstairs",
            "pin": 4
        },
        {
            "type": "output",
            "name": "light_attic_downstairs",
            "commandTopic": "home/switches/lights/attic/downstairs/set",
            "invert": true,
            "default": 0,
            "pin": 5
        },
        {
            "type": "input",
            "name": "light_switch_attic_downstairs",
            "pin": 13
        },
        {
            "type": "output",
            "name": "light_christmas",
            "commandTopic": "home/switches/lights/christmas/front/set",
            "invert": true,
            "default": 0,
            "pin": 12
        },
        {
            "type": "analog",
            "name": "wind_direction",
            "interval": 10
        },
        {
            "type": "dht",
            "name": "dht",
            "interval": 60,
            "pin": 14
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "light_attic_upstairs",
            "topic": "home/switches/lights/attic/upstairs/state",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "light_attic_downstairs",
            "topic": "home/switches/lights/attic/downstairs/state",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "light_christmas",
            "topic": "home/switches/lights/christmas/front/state",
            "retain": true
        },
        {
            "type": "command",
            "interface": "light_switch_attic_upstairs",
            "target": "light_attic_upstairs",
            "command": "toggle",
            "value": "0"
        },
        {
            "type": "command",
            "interface": "light_switch_attic_downstairs",
            "target": "light_attic_downstairs",
            "command": "toggle",
            "value": "0"
        },
        {
            "type": "publish",
            "interface": "rain",
            "topic": "home/sensors/rain",
            "value": 0,
            "payload": "0.2794"
        },
        {
            "type": "publish",
            "interface": "rain",
            "topic": "home/sensors/rain",
            "value": 1,
            "payload": "0"
        },
        {
            "type": "publish",
            "interface": "wind_strength",
            "topic": "home/sensors/wind/strength",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dht",
            "topic": "home/sensors/temperature/attic",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dht",
            "topic": "home/sensors/humidity/attic",
            "template": "%2",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "wind_direction",
            "topic": "home/sensors/wind/direction",
            "payload": {
                "type": "map",
                "ops": [
                    { "min": 0, "max": 35, "value": 90 },
                    { "min": 35, "max": 60, "value": 135 },
                    { "min": 60, "max": 100, "value": 180 },
                    { "min": 120, "max": 200, "value": 45 },
                    { "min": 220, "max": 350, "value": 225 },
                    { "min": 500, "max": 600, "value": 0 },
                    { "min": 900, "max": 1023, "value": 315 },
                    { "min": 1024, "max": 1025, "value": 270 }
                ],
                "value": { "type": "value" }
            },
            "retain": true
        }
    ]
}
