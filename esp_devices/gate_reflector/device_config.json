{
    "debug": true,
    "name": "gate_reflector",
    "availabilityTopic": "home/devices/gate_reflector/available",
    "statusTopic": "home/devices/gate_reflector/status",
    "debugTopic": "home/devices/gate_reflector/debug",
    "interfaces": [
        {
            "type": "output",
            "name": "relay",
            "commandTopic": "home/switches/lights/gate_reflector/set",
            "pin": 3,
            "default": 0
        },
        {
            "type": "input",
            "name": "motion_sensor",
            "pin": 4
        },
        {
            "type": "analog",
            "name": "light",
            "interval": 30
        },
        {
            "type": "dht",
            "name": "dht",
            "interval": 60,
            "pin": 2
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "relay",
            "topic": "home/switches/lights/gate_reflector/state",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "motion_sensor",
            "topic": "home/sensors/motion/gate_reflector",
            "retain": false
        },
        {
            "type": "publish",
            "interface": "light",
            "topic": "home/sensors/light/shadow",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dht",
            "topic": "home/sensors/temperature/outside2",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dht",
            "topic": "home/sensors/humidity/outside2",
            "template": "%2",
            "retain": true
        }
    ]
}
