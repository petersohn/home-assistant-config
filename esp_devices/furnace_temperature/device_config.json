{
    "debug": true,
    "name": "furnaceTemperature",
    "availabilityTopic": "home/devices/furnaceTemperature/availability",
    "debugTopic": "home/devices/furnaceTemperature/debug",
    "interfaces": [
        {
            "type": "dallasTemperature",
            "name": "dallas",
            "interval": 15,
            "pin": 2,
            "devices": 3
        },
        {
            "type": "output",
            "name": "pump",
            "commandTopic": "home/switches/heating_pump/set",
            "default": false,
            "invert": true,
            "pin": 3
        },
        {
            "type": "dht",
            "name": "dht",
            "interval": 60,
            "pin": 0
        },
        {
            "type": "output",
            "name": "heat_switch",
            "default": false,
            "invert": true,
            "pin": 5
        },
        {
            "type": "output",
            "name": "hot_water_pump",
            "commandTopic": "home/switches/hot_water_pump/set",
            "default": false,
            "invert": true,
            "pin": 4
        },
        {
            "type": "output",
            "name": "heater",
            "commandTopic": "home/switches/heater/main/set",
            "default": false,
            "invert": true,
            "pin": 12
        },
        {
            "type": "status",
            "name": "status"
        },
        {
            "type": "mqtt",
            "name": "room_temperature1",
            "topic": "home/sensors/temperature/bedroom/upper"
        },
        {
            "type": "mqtt",
            "name": "room_temperature2",
            "topic": "home/sensors/temperature/living_room/upper"
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "dallas",
            "topic": "home/sensors/temperature/furnace/wood_in",
            "payload": {"type": "value", "index": 1},
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dallas",
            "topic": "home/sensors/temperature/furnace/gas",
            "payload": {"type": "value", "index": 2},
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dallas",
            "topic": "home/sensors/temperature/furnace/wood",
            "payload": {"type": "value", "index": 3},
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dht",
            "topic": "home/sensors/temperature/furnace_room",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dht",
            "topic": "home/sensors/humidity/furnace_room",
            "template": "%2",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "pump",
            "topic": "home/switches/heating_pump/status",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "hot_water_pump",
            "topic": "home/switches/hot_water_pump/status",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "heater",
            "topic": "home/switches/heater/main/status",
            "retain": true
        },
        {
            "type": "command",
            "interface": "dallas",
            "target": "pump",
            "command": {
                "type": "if",
                "cond": {
                    "type": ">=",
                    "ops": [{"type": "value", "index": 3}, 80]
                },
                "then": "1",
                "else": ""
            }
        },
        {
            "type": "command",
            "interface": "dallas",
            "target": "pump",
            "command": {
                "type": "if",
                "cond": {
                    "type": "<",
                    "ops": [{"type": "value", "index": 3}, 25]
                },
                "then": "0",
                "else": ""
            }
        },
        {
            "type": "command",
            "interface": "dallas",
            "target": "heat_switch",
            "command": {
                "type": "if",
                "cond": {
                    "type": ">=",
                    "ops": [{"type": "value", "index": 3}, 30]
                },
                "then": "1",
                "else": "0"
            }
        },
        {
            "type": "command",
            "interface": "room_temperature1",
            "target": "heater",
            "command": {
                "type": "if",
                "cond": {
                    "type": ">",
                    "ops": [{"type": "value"}, 25]
                },
                "then": "0",
                "else": ""
            }
        },
        {
            "type": "command",
            "interface": "room_temperature2",
            "target": "heater",
            "command": {
                "type": "if",
                "cond": {
                    "type": ">",
                    "ops": [{"type": "value"}, 25]
                },
                "then": "0",
                "else": ""
            }
        },
        {
            "type": "command",
            "interface": "status",
            "target": "heater",
            "value": "0",
            "command": "0"
        }
    ]
}
