{
    "debug": false,
    "name": "driveway",
    "availabilityTopic": "home/devices/driveway/available",
    "statusTopic": "home/devices/driveway/status",
    "debugTopic": "home/devices/driveway/debug",
    "interfaces": [
        {
            "type": "output",
            "name": "relay",
            "commandTopic": "home/switches/lights/driveway/set",
            "invert": true,
            "pin": 2
        },
        {
            "type": "output",
            "name": "heater",
            "invert": true,
            "pin": 0
        },
        {
            "type": "input",
            "name": "motion_sensor",
            "pin": 3
        },
        {
            "type": "dallasTemperature",
            "name": "dallas",
            "interval": "30",
            "devices": 1,
            "pin": 1
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "motion_sensor",
            "topic": "home/sensors/motion/driveway_lower",
            "retain": false
        },
        {
            "type": "publish",
            "interface": "relay",
            "topic": "home/switches/lights/driveway/state",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "heater",
            "topic": "home/devices/driveway/heater"
        },
        {
            "type": "publish",
            "interface": "dallas",
            "topic": "home/devices/driveway/temperature"
        },
        {
            "type": "command",
            "interface": "dallas",
            "target": "heater",
            "command": {
                "type": "if",
                "cond": {
                    "type": "<=",
                    "ops": [{"type": "value"}, -2]
                },
                "then": "1",
                "else": ""
            }
        },
        {
            "type": "command",
            "interface": "dallas",
            "target": "heater",
            "command": {
                "type": "if",
                "cond": {
                    "type": ">=",
                    "ops": [{"type": "value"}, 5]
                },
                "then": "0",
                "else": ""
            }
        }
    ]
}
