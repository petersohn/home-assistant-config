{
    "debug": true,
    "name": "bedroom_temperature",
    "availabilityTopic": "home/devices/bedroom_temperature/availability",
    "interfaces": [
        {
            "type": "dht",
            "name": "lower",
            "interval": 60,
            "pin": 0
        },
        {
            "type": "dht",
            "name": "upper",
            "interval": 60,
            "pin": 2
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "lower",
            "topic": "home/sensors/temperature/bedroom/lower",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "lower",
            "topic": "home/sensors/humidity/bedroom/lower",
            "template": "%2",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "upper",
            "topic": "home/sensors/temperature/bedroom/upper",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "upper",
            "topic": "home/sensors/humidity/bedroom/upper",
            "template": "%2",
            "retain": true
        },
    ]
}
