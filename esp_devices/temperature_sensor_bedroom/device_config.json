{
    "debug": false,
    "name": "bedroom_temperature",
    "availabilityTopic": "home/devices/bedroom_temperature/availability",
    "debugTopic": "home/devices/bedroom_temperature/debug",
    "interfaces": [
        {
            "type": "dht",
            "name": "lower",
            "interval": 60,
            "pin": 0
        },
        {
            "type": "output",
            "name": "relay",
            "commandTopic": "home/switches/mosquito_killer/bedroom/set",
            "default": 0,
            "pin": 3
        },
        {
            "type": "dht",
            "name": "upper",
            "interval": 60,
            "pin": 2
        },
        {
            "type": "input",
            "name": "button",
            "interval": 60,
            "pin": 1
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "lower",
            "topic": "home/sensors/temperature/bedroom/lower",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "lower",
            "topic": "home/sensors/humidity/bedroom/lower",
            "template": "%2",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "upper",
            "topic": "home/sensors/temperature/bedroom/upper",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "upper",
            "topic": "home/sensors/humidity/bedroom/upper",
            "template": "%2",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "button",
            "topic": "home/input_select/presence_mode/set",
            "value": 0,
            "template": "sleep",
            "retain": false
        },
        {
            "type": "publish",
            "interface": "relay",
            "topic": "home/switches/mosquito_killer/bedroom/state",
            "template": "%1",
            "retain": true
        }
    ]
}
