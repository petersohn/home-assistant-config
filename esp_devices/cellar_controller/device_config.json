{
    "debug": true,
    "name": "cellar_controller",
    "availabilityTopic": "home/devices/cellar_controller/available",
    "statusTopic": "home/devices/cellar_controller/status",
    "debugTopic": "home/devices/cellar_controller/debug",
    "interfaces": [
        {
            "type": "input",
            "name": "light_switch_cellar",
            "cycle": "single",
            "pin": 12
        },
        {
            "type": "output",
            "name": "light_cellar",
            "commandTopic": "home/switches/lights/cellar/set",
            "invert": true,
            "default": 0,
            "pin": 4
        },
        {
            "type": "dht",
            "name": "temperature_cellar",
            "pin": 5
        },
        {
            "type": "dallasTemperature",
            "name": "dallas",
            "interval": 15,
            "pin": 14
        },
        {
            "type": "output",
            "name": "sprinkler",
            "commandTopic": "home/switches/auto_sprinkler_cellar/set",
            "invert": true,
            "default": 0,
            "pin": 3
        }
    ],
    "actions": [
        {
            "type": "publish",
            "interface": "light_cellar",
            "topic": "home/switches/lights/cellar/state",
            "retain": true
        },
        {
            "type": "command",
            "interface": "light_switch_cellar",
            "target": "light_cellar",
            "command": "toggle",
            "value": "0"
        },
        {
            "type": "publish",
            "interface": "temperature_cellar",
            "topic": "home/sensors/temperature/cellar",
            "template": "%1",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "temperature_cellar",
            "topic": "home/sensors/humidity/cellar",
            "template": "%2",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "sprinkler",
            "topic": "home/switches/auto_sprinkler_cellar/state",
            "retain": true
        },
        {
            "type": "publish",
            "interface": "dallas",
            "topic": "home/sensors/temperature/hot_water",
            "payload": {"type": "value", "index": 1},
            "retain": true
        }
    ]
}
